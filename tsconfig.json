{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "declaration": true,                             
    "outDir": "./dist/", 
    "removeComments": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "strictNullChecks": true, 
    "alwaysStrict": true, 
    "noImplicitReturns": true, 
    "skipLibCheck": true 
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}

